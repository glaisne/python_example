pipeline {

    agent { 
        node { 
            label 'linux'
        }
    }
    stages {
        stage ("setup") {
                echo 'Install requirements...'
                sh("pip3 install -r requirements.txt")
        }
        stage ("Information") {
            steps {
                echo 'Designing a python/Jenkins example setup'

                echo 'Python information'
                sh("pip3 list")
                sh("python3 -V")
            }
        }
        stage ("linting") {
            steps {
                pylint --rcfile .\pylint.config --reports y az
            }
        }
    }
}
